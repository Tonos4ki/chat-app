<div class="side-bar-header">
  <!---------------ユーザーネーム-------------------->
  <div class="user-name">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <!---------------チャットルーム作成ボタン-------------------->
  <div class="create-btn">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<!---------------チャットルーム一覧-------------------->
<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <a href="#"><%= room.name %></a>
      </div>
    </div>
    <% end %>
</div>